<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp">

        <com.pp.a10dance.view.GenericCard
            android:id="@+id/attendance_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:foreground="?android:attr/selectableItemBackground"
            app:lcv_title="@string/attendance_history"
            app:lcv_call_to_action="Take Attendance"
            android:layout_marginBottom="16dp"
            />

        <com.pp.a10dance.view.GenericCard
            android:id="@+id/student_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:foreground="?android:attr/selectableItemBackground"
            app:lcv_title="Manage Student in class"
            app:lcv_call_to_action="View Attendance History" />


    </LinearLayout>
</ScrollView>