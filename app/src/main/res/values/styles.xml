<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="EditTextA10DanceTheme" parent="android:Widget.EditText">
        <item name="android:background">@drawable/a10dancetheme_edit_text_holo_light</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="CheckBoxA10DanceTheme" parent="android:Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/a10dancetheme_btn_check_holo_light</item>
    </style>

    <style name="RadioButtonA10DanceTheme" parent="android:Widget.CompoundButton.RadioButton">
        <item name="android:button">@drawable/a10dancetheme_btn_radio_holo_light</item>
    </style>

    <style name="SpinnerDropDownItemA10DanceTheme" parent="android:Widget.DropDownItem.Spinner">
        <item name="android:checkMark">@drawable/a10dancetheme_btn_radio_holo_light</item>
    </style>

    <style name="TabA10DanceTheme">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:paddingLeft">16dip</item>
        <item name="android:paddingRight">16dip</item>
        <item name="android:background">@drawable/a10dancetheme_tab_indicator_holo</item>
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_weight">1</item>
        <item name="android:minWidth">80dip</item>
    </style>

    <style name="TabTextA10DanceTheme">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <!-- v14 <item name="android:textAllCaps">true</item> -->
        <item name="android:ellipsize">marquee</item>
        <item name="android:maxLines">2</item>
        <item name="android:maxWidth">180dip</item>
    </style>

    <style name="ListViewA10DanceTheme" parent="android:Widget.ListView">
        <item name="android:listSelector">@drawable/a10dancetheme_list_selector_holo_light</item>
    </style>

    <style name="ListViewA10DanceTheme.White" parent="android:Widget.ListView.White">
        <item name="android:listSelector">@drawable/a10dancetheme_list_selector_holo_light</item>
    </style>

    <style name="SpinnerItemA10DanceTheme" parent="android:TextAppearance.Widget.TextView.SpinnerItem">
        <item name="android:textColor">#000000</item>
    </style>

    <style name="AutoCompleteTextViewA10DanceTheme" parent="android:Widget.Holo.Light.AutoCompleteTextView">
        <item name="android:dropDownSelector">@drawable/a10dancetheme_list_selector_holo_light
        </item>
        <item name="android:background">@drawable/a10dancetheme_edit_text_holo_light</item>
    </style>

    <style name="ButtonA10DanceTheme" parent="android:Widget.Holo.Light.Button">
        <item name="android:background">@drawable/a10dancetheme_btn_default_holo_light</item>
    </style>

    <style name="ImageButtonA10DanceTheme" parent="android:Widget.Holo.Light.ImageButton">
        <item name="android:background">@drawable/a10dancetheme_btn_default_holo_light</item>
    </style>

    <style name="SpinnerA10DanceTheme" parent="android:Widget.Holo.Light.Spinner">
        <item name="android:background">@drawable/a10dancetheme_spinner_background_holo_light</item>
        <item name="android:dropDownSelector">@drawable/a10dancetheme_list_selector_holo_light
        </item>
    </style>

    <style name="ProgressBarA10DanceTheme" parent="android:Widget.Holo.Light.ProgressBar.Horizontal">
        <item name="android:progressDrawable">
            @drawable/a10dancetheme_progress_horizontal_holo_light
        </item>
        <item name="android:indeterminateDrawable">
            @drawable/a10dancetheme_progress_indeterminate_horizontal_holo_light
        </item>
    </style>

    <style name="SeekBarA10DanceTheme" parent="android:Widget.Holo.Light.SeekBar">
        <item name="android:progressDrawable">
            @drawable/a10dancetheme_scrubber_progress_horizontal_holo_light
        </item>
        <item name="android:indeterminateDrawable">
            @drawable/a10dancetheme_scrubber_progress_horizontal_holo_light
        </item>
        <item name="android:thumb">@drawable/a10dancetheme_scrubber_control_selector_holo_light
        </item>
    </style>

    <style name="RatingBarA10DanceTheme" parent="android:Widget.Holo.Light.RatingBar">
        <item name="android:progressDrawable">@drawable/a10dancetheme_ratingbar_full_holo_light
        </item>
        <item name="android:indeterminateDrawable">
            @drawable/a10dancetheme_ratingbar_full_holo_light
        </item>
    </style>

    <style name="RatingBarBigA10DanceTheme" parent="android:Widget.Holo.Light.RatingBar.Indicator">
        <item name="android:progressDrawable">@drawable/a10dancetheme_ratingbar_holo_light</item>
        <item name="android:indeterminateDrawable">@drawable/a10dancetheme_ratingbar_holo_light
        </item>
    </style>

    <style name="RatingBarSmallA10DanceTheme" parent="android:Widget.Holo.Light.RatingBar.Small">
        <item name="android:progressDrawable">@drawable/a10dancetheme_ratingbar_small_holo_light
        </item>
        <item name="android:indeterminateDrawable">
            @drawable/a10dancetheme_ratingbar_small_holo_light
        </item>
    </style>

    <style name="ToggleA10DanceTheme" parent="android:Widget.Holo.Light.Button.Toggle">
        <item name="android:background">@drawable/a10dancetheme_btn_toggle_holo_light</item>
    </style>


    <style name="a10dance_action_button">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:padding">16dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:textSize">20sp</item>
    </style>


    <style name="menu_labels_style">
        <item name="android:background">@drawable/semitransparent_background</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>